<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reading List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <section class="container my-5">
        <h1  class="display-4 text-center">Reading<span class="text-warning">List</span></h1>
        <div class="container my-5">
            <h2 class="h3 text-center"><span class="text-warning"> Left to Read: </span> <%= left %></h2>
        </div>
    </section>
    <section id="to-read" class="text-center my-5">
       
        <ul>
            <% items.forEach(book => { %>
                <li class="item" data-id="<%=book._id%>">
                    <span class="<%= book.completed === true ? "completed" : "incomplete"%>"> <%= book.thing%> , <%=book.Author %></span>
                    <span class='fa fa-trash'>Delete</span>
                </li>
            <% }) %>
    </section>
    
    <form id="book-form" action="/addBook" method='POST' class="py-5">

        <div class="form-group text-center mx-5 my-3 px-5">
            <label class ="text-center" for="title">Book Title</label>
            <input type="text" id="title" class="form-control" placeholder="e.g. The Republic" name="bookTitle">
        </div>
        <div class="form-group text-center mx-5 my-3 px-5">
            <label for="author">Author</label>
            <input type="text" id="author" class="form-control" placeholder="e.g. Plato" name="todoAuthor">
        </div>
        <div class="d-flex justify-content-center my-4">
            <button class="btn btn-warning" type="submit" id="add-book-btn">Add to your list!</button>
          </div>
    </form>

   
   

    <script src='js/main.js'></script>
</body>
</html>


