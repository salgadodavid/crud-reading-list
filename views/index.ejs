<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reading List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <section class="container my-5">
        <h1  class="display-4 text-center">Reading<span class="text-warning">List</span></h1>
        <div class="container my-5">
            <h2 class="h3 text-center"><span class="text-warning"> Left to Read: </span> <%= left %></h2>
        </div>
    </section>
 
    <section id="tableDisplay" class="mx-5 my-3 px-5">
        <table class="table table-hover">  <!--mx-5 my-3 px-5-->
            <thead>
                <tr class="header-yellow">
                  <th scope="col">Status</th>
                  <th scope="col">Author</th>
                  <th scope="col">Book Title</th>
                  <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody id="to-read">
                    <% items.forEach(book => { %>
                        <tr data-id="<%=book._id%>" class="<%= book.completed === true ? "completed" : "incomplete"%>">
                            <td>  
                                <% if (book.completed) { %>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                                        <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                                    </div>
                                  <%} else { %>
                                      
                                    <div class="form-check form-switch">
                                         <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                         <label class="form-check-label" for="flexSwitchCheckDefault"></label>
                                    </div>
                                    <% } %>
                            </td>
                            <td class="auth"> <%=book.Author %></td>
                            <td class="title"> <%= book.thing%> </td>
                            <td class="read"><button type="button" class="btn btn-danger" id="deleteButton">Delete</button></td>
                        </tr>
                    <% }) %>
            </tbody>
        </table>

    </section>
    <section id="add-books">
        <div class="container my-5">
            <h2 class="h3 text-center"><span class="text-warning"> Add More Books: </span></h2>
        </div>
    <form id="book-form" action="/addBook" method='POST' class="py-5">

        <div class="form-group text-center mx-5 my-3 px-5">
            <label class ="text-center" for="title">Book Title</label>
            <input type="text" id="title" class="form-control" placeholder="e.g. Don Quixote" name="bookTitle">
        </div>
        <div class="form-group text-center mx-5 my-3 px-5">
            <label for="author">Author</label>
            <input type="text" id="author" class="form-control" placeholder="e.g. Miguel de Cervantes" name="todoAuthor">
        </div>
        <div class="d-flex justify-content-center my-4">
            <button class="btn btn-warning" type="submit" id="add-book-btn">Add to your list!</button>
          </div>
    </form>
    </section>

   
   

    <script src='js/main.js'></script>
</body>
</html>


